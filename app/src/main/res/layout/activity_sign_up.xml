<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.example.opet.caksecuritycar.SignUpActivity">

    <TextView

        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CarCak"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtTelefone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Telefone"
        android:layout_below="@+id/txtNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtIdUsuario"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="E-mail"
        android:layout_below="@+id/txtTelefone"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtSenha1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Senha"
        android:layout_below="@+id/txtIdUsuario"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtSenha2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Repita sua senha"
        android:layout_below="@+id/txtSenha1"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSenha2"
        android:onClick="startAPICadastraUsuario"
        android:text="Cadastrar" />

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCadastrar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="44dp"
        android:text=" " />
</RelativeLayout>

