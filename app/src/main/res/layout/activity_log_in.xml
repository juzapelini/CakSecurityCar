<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.example.opet.caksecuritycar.LogInActivity">

    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="CarCak"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEmail"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSigIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainActivityView"
        android:text="Login"
        android:layout_below="@+id/txtSenha"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:layout_below="@+id/btnSigIn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="signUpView"
        android:text="SignUp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btnFacebook"
        android:layout_alignParentStart="true" />

</RelativeLayout>
